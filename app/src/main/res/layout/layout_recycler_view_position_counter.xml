<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_position_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3"/>

        <TextView
            android:id="@+id/slash_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='/'
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/item_position_text_view"
            app:layout_constraintBottom_toBottomOf="@id/item_position_text_view"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/slash_holder_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/slash_text_view"
            app:layout_constraintTop_toTopOf="@id/slash_text_view"/>

        <TextView
            android:id="@+id/item_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@id/slash_holder_text_view"
            app:layout_constraintBottom_toBottomOf="@id/slash_holder_text_view"
            app:layout_constraintTop_toTopOf="@id/slash_text_view"
            tools:text="15"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
