<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    <set
        android:ordering="together">

        <objectAnimator
            android:propertyName="scaleY"
            android:valueTo="0.8"
            />
        <objectAnimator
            android:propertyName="scaleX"
            android:valueTo="0.8" />
    </set>


    <set
        android:ordering="together">
        <objectAnimator
            android:propertyName="scaleY"
            android:valueTo="1" />
        <objectAnimator
            android:propertyName="scaleX"
            android:valueTo="1" />
    </set>
</set>
